<div {{bindAttr class=":ember-text-editor-toolbar isToolbarVisible::hide"}}>
  {{select-component
    contentBinding="fontNames"
    placeholder="Select a Font"
    selectionBinding="selectedFontName"
    class="ember-text-editor-font-family-select"
    isSelect="true"
    buttonClass="btn btn-default btn-sm btn-form text-left"
    itemViewClassBinding="fontChooserItemViewClass"
    userSelected="applyFontName"
  }}

  {{!-- Add the fontWeight another select and then apply the different weights to it. --}}
  {{!-- Just like http://www.linotype.com/1266/neuehelvetica-family.html --}}
  {{!-- {{select-component
    contentBinding="fontNames"
    placeholder="Select a Font"
    selectionBinding="selectedFontName"
    class="ember-text-editor-font-family-select"
    isSelect="true"
    buttonClass="btn btn-default btn-sm"
    itemViewClassBinding="fontChooserItemViewClass"
  }} --}}

  {{select-component
    contentBinding="fontSizes"
    placeholder="Select Font Size"
    optionLabelPath="name"
    optionValuePath="size"
    valueBinding="selectedFontSize"
    sortLabels=false
    class="ember-text-editor-font-size-select"
    isSelect="true"
    buttonClass="btn btn-default btn-sm"
    userSelected="applyFontSize"
  }}

  {{view Ember.Widgets.ColorPicker
    selectedColorBinding="selectedForeColor"
    class="btn btn-default btn-sm"
    userSelected="applyForeColor"
  }}

  <div class="btn-group">
    <button type="button" {{bindAttr class=":btn :btn-default :btn-sm isBold:active"}}
      {{action "bold" on="mouseDown"}}>
      <i class="fa fa-bold"></i>
    </button>
    <button type="button" {{bindAttr class=":btn :btn-default :btn-sm isItalic:active"}}
      {{action "italic" on="mouseDown"}}>
      <i class="fa fa-italic"></i>
    </button>
    <button type="button" {{bindAttr class=":btn :btn-default :btn-sm isUnderline:active"}}
      {{action "underline" on="mouseDown"}}>
      <i class="fa fa-underline"></i>
    </button>
  </div>

  <div class="btn-group">
    <button type="button" {{bindAttr class=":btn :btn-default :btn-sm isJustifyLeft:active"}}
      {{action "justifyLeft" on="mouseDown"}}>
      <i class="fa fa-align-left"></i>
    </button>
    <button type="button" {{bindAttr class=":btn :btn-default :btn-sm isJustifyCenter:active"}}
      {{action "justifyCenter" on="mouseDown"}}>
      <i class="fa fa-align-center"></i>
    </button>
    <button type="button" {{bindAttr class=":btn :btn-default :btn-sm isJustifyRight:active"}}
      {{action "justifyRight" on="mouseDown"}}>
      <i class="fa fa-align-right"></i>
    </button>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-default btn-sm"
      {{action "insertOrderedList" on="mouseDown"}}>
      <i class="fa fa-list-ol"></i>
    </button>
    <button type="button" class="btn btn-default btn-sm"
      {{action "insertUnorderedList" on="mouseDown"}}>
      <i class="fa fa-list-ul"></i>
    </button>
  </div>

  <div class="btn-group">
    <button type="button" class="btn btn-default btn-sm"
      {{action "outdent" on="mouseDown"}}>
      <i class="fa fa-outdent"></i>
    </button>
    <button type="button" class="btn btn-default btn-sm"
      {{action "indent" on="mouseDown"}}>
      <i class="fa fa-indent"></i>
    </button>
  </div>

  {{select-component
    class="insert-non-editable-btn"
    isSelectBinding="pillHideSearchBox"
    queryBinding="query"
    showDropdownBinding="showConfigPopover"
    contentBinding="_pillOptions"
    prompt="Insert Non-Editable"
    optionLabelPath="name"
    optionValuePath="name"
    selectionBinding="selectedPillOption"
    buttonClass='btn btn-default btn-sm'
    isSelect="true"
    viewName="pillChooser"
  }}
</div>

<iframe class="text-editor-frame" src="about:blank">
</iframe>
