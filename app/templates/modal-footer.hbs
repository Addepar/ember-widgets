{{#if confirmText}}
  <button type="button"
    class="btn {{if isConfirmPrimaryBtn 'btn-primary' 'btn-default'}} btn-confirm {{if isDisabled 'disabled'}}" disabled={{isDisabled}}
    {{action 'sendConfirm'}}>{{confirmText}}
  </button>
{{/if}}

{{#if cancelText}}
  <button type="button" class="btn btn-default btn-cancel"
    {{action 'sendCancel'}}>{{cancelText}}
  </button>
{{/if}}

{{#if closeText}}
  <button type="button" class="btn btn-default btn-close"
    {{action 'sendClose'}}>{{closeText}}
  </button>
{{/if}}
