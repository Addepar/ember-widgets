{{#if showLargeHero}}
  {{!-- Hero --}}
  <div class="hero-container">
    <div class="hero widgets-hero">
      <div class="hero-overlay"></div>
    </div>
    <div class="container hero-content-container">
      <div class="row">
        <div class="span12 hero-tagline center-align hidden-tablet">
          <h1 class="elevated">Ember Widgets</h1>
          <p class="elevated">
            A powerful and easy to use component library for Ember.js.
            <br><br>
            <a target="_BLANK"
                href="https://github.com/Addepar/ember-widgets/releases"
                class="addepar-btn addepar-btn-large addepar-btn-outline addepar-btn-white">
              Download Ember-Widgets
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
{{else}}
  {{!-- Small Hero --}}
  <div class="hero-container small-hero-container">
    <div class="hero widgets-hero">
      <div class="hero-overlay"></div>
    </div>
  </div>
{{/if}}

{{!-- Main Container --}}
<div class="container">
  <div class="row">
    {{partial "ember_widgets/sub_navigation"}}
    {{outlet}}
  </div>
</div>
