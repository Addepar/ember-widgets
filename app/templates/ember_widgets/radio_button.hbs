<div class="col-md-10 col-md-offset-2 left-border main-content-container">
  <div class="row">
    <div class="col-md-12">
      <h2>Radio Button <small>Ember.Widgets.RadioButton</small></h2>
      <p class="elevated">Allows selection of one choice from multiple possibilities.</p>
      <div class="example-container">
        {{#radio-button-group-component}}
          <div class="radio-row">
            {{#radio-button value=true}}
              <span class="form-label radio-label">True</span>
            {{/radio-button}}
          </div>
          <div class="radio-row">
            {{#radio-button value=false}}
              <span class="form-label radio-label">False</span>
            {{/radio-button}}
          </div>
        {{/radio-button-group-component}}
      </div>
    </div>
    <div class="col-md-12 bumper-30">
      <h4>Application.hbs</h4>
